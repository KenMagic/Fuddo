@model List<Fuddo.Models.CartItem>

<div class="offcanvas offcanvas-end show" tabindex="-1" id="cartCanvas" style="visibility: visible; background-color: white;">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title">Giỏ hàng của bạn</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <div class="d-flex mb-3 align-items-center border-bottom pb-2 justify-content-between">
                    <div class="d-flex align-items-center">
                        <img src="@(item.Product?.ProductImages?.FirstOrDefault()?.ImageUrl ?? "/img/no-image.png")"
                             style="width: 60px; height: 60px;" class="me-3 rounded" />

                        <div>
                            <strong>@item.Product?.Name</strong><br />
                            <span class="text-muted">SL: @item.Quantity</span><br />
                            <span class="text-danger">@String.Format("{0:N0}", item.Product?.Price * item.Quantity) ₫</span>
                        </div>
                    </div>
                    <button class="btn btn-sm btn-outline-danger" onclick="removeFromCart(@item.ProductId)">
                        &times;
                    </button>
                </div>
            }
            <div class="d-flex justify-content-end mt-3">
                <a href="/Cart/Checkout" class="btn btn-orange w-100">🧾 Thanh toán</a>
            </div>
        }
        else
        {
            <p>Giỏ hàng của bạn đang trống.</p>
        }
    </div>
</div>
