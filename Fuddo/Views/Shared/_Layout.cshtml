@addTagHelper *, Fuddo
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Fuddo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- ✅ Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<style>
    .nav-custom {
        color: #333 !important;
        position: relative;
        padding-bottom: 5px;
        transition: all 0.3s ease;
    }

    .nav-custom:hover {
        color: #ff6600 !important;
    }

    .nav-custom.active {
        color: #ff6600 !important;
    }

    .nav-custom.active::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        height: 3px;
        width: 100%;
        background-color: #ff6600;
    }

    .product-card {
        transition: transform 0.2s, box-shadow 0.2s;
        cursor: pointer;
    }

        .product-card:hover {
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            transform: translateY(-2px);
        }

        .product-card img {
            object-fit: cover;
            height: 200px;
        }

    .custom-pagination .page-link {
        background-color: transparent;
        color: black;
        border: none;
        box-shadow: none;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

        .custom-pagination .page-link:hover {
            background-color: #ff6600;
            color: white;
        }

    .custom-pagination .page-item.active .page-link {
        background-color: #ff6600;
        color: white;
    }

    .custom-pagination .page-item.disabled .page-link {
        background-color: transparent;
        color: #ccc;
        pointer-events: none;
    }

    .btn-orange {
        background-color: #ff6600;
        color: white;
        border: none;
        transition: background-color 0.3s;
    }

        .btn-orange:hover {
            background-color: #e65c00;
            color: white;
        }

    .hover-shadow:hover {
        box-shadow: 0 0 15px rgba(0,0,0,0.15);
        transform: translateY(-2px);
        transition: all 0.2s ease;
    }

    .bg-orange {
        background-color: #ff6600;
        color: white;
    }

</style>



<body>
    @inject Fuddo.Service.Interface.ICartService CartService
    @inject Fuddo.Service.Interface.IUserService UserService
    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

    @{
        var username = User.Identity?.Name;
        var cartItems = new List<Fuddo.Models.CartItem>();

        if (!string.IsNullOrEmpty(username))
        {
            var userTask = UserService.GetByUsernameAsync(username);
            userTask.Wait();
            var user = userTask.Result;

            if (user != null)
            {
                var cartTask = CartService.GetCartItemsAsync(user.Id);
                cartTask.Wait();
                cartItems = cartTask.Result.ToList();
            }
        }

        ViewBag.CartItems = cartItems;
    }
    <!-- === HEADER / NAVBAR === -->
    <nav class="navbar navbar-expand-lg bg-white border-bottom">
        <div class="container">
            <a class="navbar-brand text-dark fw-bold" href="/">Fudd🍩</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                @{
                    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                }
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link nav-custom @(currentController == "Home" ? "active" : "")" href="/">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-custom @(currentController == "Product" ? "active" : "")" href="/Product">Sản phẩm</a>
                    </li>
                    @using Microsoft.AspNetCore.Authorization
                    @using System.Security.Claims

                    @{
                        var isAuthenticated = User.Identity.IsAuthenticated;
                        var isAdmin = User.IsInRole("Admin");
                    }
                    @if (!isAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link nav-custom @(currentController == "Account" && currentAction == "Login" ? "active" : "")" href="/Account/Login">Đăng nhập</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                👤 @username
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/Account/Profile">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item" href="/Order/My">Đơn hàng</a></li>

                                @if (isAdmin)
                                {
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item text-danger" href="/Admin">Quản lý</a></li>
                                }

                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" href="/Account/Logout">Đăng xuất</a></li>
                            </ul>
                        </li>
                    }

                </ul>
            </div>
            <button class="btn btn-outline-dark" type="button" data-bs-toggle="offcanvas" data-bs-target="#cartCanvas">
                🛒 Giỏ hàng
            </button>
        </div>
    </nav>


    <!-- === MAIN CONTENT === -->
    <div class="container mt-4">
        <tempdata-alert></tempdata-alert>
        @RenderBody()
    </div>
    <!-- === OFFCANVAS GIỎ HÀNG === -->
    <div id="cartOffcanvasContainer"></div>



    <!-- === FOOTER === -->
    <footer class="bg-light text-center text-muted mt-5 py-4 border-top">
        <div class="container">
            <p class="mb-1">© 2025 Fuddo. All rights reserved.</p>
            <p class="mb-0">Liên hệ: 0123 456 789 – fuddo@example.com</p>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)


    <!-- ✅ Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const cartButton = document.querySelector("[data-bs-target='#cartCanvas']");
            cartButton.addEventListener("click", function () {
                fetch("/Cart/GetCartPreview")
                    .then(res => res.text())
                    .then(html => {
                        document.getElementById("cartOffcanvasContainer").innerHTML = html;

                        // Hiển thị lại offcanvas (vì partial load mới không có JS)
                        const cartCanvas = new bootstrap.Offcanvas(document.getElementById("cartCanvas"));
                        cartCanvas.show();
                    });
            });
        });
                    function removeFromCart(productId) {
            fetch('/Cart/Remove?productId=' + productId, {
                method: 'POST'
            })
            .then(res => {
                if (res.ok) {
                    return fetch("/Cart/GetCartPreview");
                }
            })
            .then(res => res.text())
            .then(html => {
                document.getElementById("cartOffcanvasContainer").innerHTML = html;
                const cartCanvas = new bootstrap.Offcanvas(document.getElementById("cartCanvas"));
                cartCanvas.show();
            });
        }
    </script>

</body>
</html>
