@model IEnumerable<Fuddo.Models.Order>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

@addTagHelper *,Fuddo

<div class="container mt-5">
    <h2 class="mb-4">Lịch sử đơn hàng</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th>Địa chỉ</th>
                    <th>SĐT</th>
                    <th>Chi tiết</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@string.Format("{0:N0} ₫", order.TotalAmount)</td>
                        <td>@order.Status</td>
                        <td>@order.Address</td>
                        <td>@order.Phone</td>
                        <td>
                            <a href="/Order/Details/@order.Id" class="btn btn-sm btn-orange">
                                Xem
                            </a>
                        </td>
                    </tr>
                    <tr id="details-@order.Id" class="collapse">
                        <td colspan="7">
                            <ul class="list-group">
                                @if (order.OrderDetails != null && order.OrderDetails.Any())
                                {
                                    foreach (var detail in order.OrderDetails)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>@detail.Product?.Name</strong><br />
                                                SL: @detail.Quantity
                                            </div>
                                            <span class="text-danger">
                                                @string.Format("{0:N0} ₫", detail.UnitPrice * detail.Quantity)
                                            </span>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li class="list-group-item text-muted">Không có sản phẩm trong đơn này.</li>
                                }

                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <pagination current-page="@currentPage"
                    total-pages="@totalPages"
                    base-url="/Order/My"
                    query-string="">
        </pagination>
    }
    else
    {
        <div class="alert alert-info">Bạn chưa có đơn hàng nào.</div>
    }
</div>
