@model IEnumerable<Fuddo.Models.Order>
@{
    ViewData["Title"] = "Đơn hàng của tôi";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

@addTagHelper *,Fuddo
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-5">
    <h2 class="mb-4">Lịch sử đơn hàng</h2>
    <form method="get" asp-action="My" class="row mb-3">
        <div class="col-md-3">
            <label>Trạng thái</label>
            <select name="status" class="form-select">
                <option value="">Tất cả</option>
                <option value="Pending" selected="@(ViewBag.Status == "Pending")">Pending</option>
                <option value="Processing" selected="@(ViewBag.Status == "Processing")">Processing</option>
                <option value="Delivered" selected="@(ViewBag.Status == "Delivered")">Delivered</option>
                <option value="Cancelled" selected="@(ViewBag.Status == "Cancelled")">Cancelled</option>
            </select>
        </div>

        <div class="col-md-3">
            <label>Từ ngày</label>
            <input type="date" name="startDate" value="@ViewBag.StartDate" class="form-control" />
        </div>

        <div class="col-md-3">
            <label>Đến ngày</label>
            <input type="date" name="endDate" value="@ViewBag.EndDate" class="form-control" />
        </div>

        <div class="col-md-3 d-flex align-items-end">
            <button type="submit" class="btn btn-orange me-2">Lọc</button>
            <a href="/Order/My" class="btn btn-secondary">Reset</a>
        </div>
    </form>


    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Ngày đặt</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                    <th>Địa chỉ</th>
                    <th>SĐT</th>
                    <th>Chi tiết</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@string.Format("{0:N0} ₫", order.TotalAmount)</td>
                        <td>@order.Status</td>
                        <td>@order.Address</td>
                        <td>@order.Phone</td>
                        <td>
                            <a href="/Order/Details/@order.Id" class="btn btn-sm btn-orange">
                                Xem
                            </a>
                        </td>
                    </tr>
                    <tr id="details-@order.Id" class="collapse">
                        <td colspan="7">
                            <ul class="list-group">
                                @if (order.OrderDetails != null && order.OrderDetails.Any())
                                {
                                    foreach (var detail in order.OrderDetails)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>@detail.Product?.Name</strong><br />
                                                SL: @detail.Quantity
                                            </div>
                                            <span class="text-danger">
                                                @string.Format("{0:N0} ₫", detail.UnitPrice * detail.Quantity)
                                            </span>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li class="list-group-item text-muted">Không có sản phẩm trong đơn này.</li>
                                }

                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <pagination current-page="@currentPage"
                    total-pages="@totalPages"
                    base-url="/Order/My"
                    query-string="">
        </pagination>
    }
    else
    {
        <div class="alert alert-info">Bạn chưa có đơn hàng nào.</div>
    }
</div>
