@model Fuddo.Models.ViewModel.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-orange text-white">
                    <h4>Reset Password</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Token" />

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">Mật khẩu mới: </label>
                            <input asp-for="NewPassword" class="form-control" type="password" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">Nhập lại mật khẩu: </label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-orange w-100">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

