@model Fuddo.Models.User
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container mt-5">
    <h2 class="mb-4">Thông tin cá nhân</h2>

    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success">@ViewBag.Success</div>
    }

    <form method="post" class="col-md-6">
        <div class="mb-3">
            <label>Họ và tên</label>
            <input type="text" name="FullName" value="@Model.FullName" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Email</label>
            <input type="email" name="Email" value="@Model.Email" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Số điện thoại</label>
            <input type="text" name="Phone" value="@Model.Phone" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Địa chỉ</label>
            <textarea name="Address" class="form-control">@Model.Address</textarea>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-orange">Cập nhật</button>
            <a class="btn btn-outline-warning" href="/Account/ChangePassword">Đổi mật khẩu</a>
        </div>

    </form>

</div>
