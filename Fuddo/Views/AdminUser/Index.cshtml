@model IEnumerable<Fuddo.Models.User>
@{
    ViewData["Title"] = "Quản lí người dùng";
}
@addTagHelper *,Fuddo

<!-- 🔹 Breadcrumb -->
<nav style="--bs-breadcrumb-divider: '>>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">Quản lí</a></li>
        <li class="breadcrumb-item active" aria-current="page">Người dùng</li>
    </ol>
</nav>

<h2>Quản lý người dùng</h2>


<!-- 🔍 Tìm kiếm -->
<form class="mb-3 d-flex" method="get" action="/AdminUser/Index">
    <input type="text" name="keyword" value="@ViewBag.Keyword" class="form-control me-2" placeholder="Tìm theo tên, email, sđt..." />
    <button type="submit" class="btn btn-orange">Tìm kiếm</button>
</form>

<a href="/AdminUser/Create" class="btn btn-success mb-3">Thêm người dùng</a>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Tên đăng nhập</th>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Vai trò</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Username</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.Role</td>
                <td class="text-center">

                    <!-- Nút Đổi quyền (User -> Admin hoặc ngược lại) -->
                    @if (user.Role == "Admin")
                    {
                        <a href="/AdminUser/ChangeRole/@user.Id?role=User" class="btn btn-sm btn-secondary me-1"
                           onclick="return confirm('Chuyển người dùng này thành User?');">
                            👤 Bỏ quyền Admin
                        </a>
                    }
                    else
                    {
                        <a href="/AdminUser/ChangeRole/@user.Id?role=Admin" class="btn btn-sm btn-success me-1"
                           onclick="return confirm('Nâng quyền người dùng này thành Admin?');">
                            ⭐ Làm Admin
                        </a>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>

<!-- 🔢 PHÂN TRANG -->
<pagination current-page="@ViewBag.CurrentPage"
            total-pages="@ViewBag.TotalPages"
            base-url="/AdminUser"
            query-string="keyword=@ViewBag.Keyword">
</pagination>
