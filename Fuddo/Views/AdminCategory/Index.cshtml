@model IEnumerable<Fuddo.Models.Category>
@{
    ViewData["Title"] = "Quản lý danh mục";
}
@addTagHelper *, Fuddo

<!-- Breadcrumb -->
<nav style="--bs-breadcrumb-divider: '>>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">Quản lí</a></li>
        <li class="breadcrumb-item active" aria-current="page">Quản lí danh mục</li>
    </ol>
</nav>

<h2>Quản lý danh mục</h2>
<!-- Form tìm kiếm -->
<form class="mb-3 d-flex" method="get" action="/AdminCategory/Index">
    <input type="text" name="keyword" value="@ViewBag.Keyword" class="form-control me-2" placeholder="Tìm theo tên danh mục..." />
    <button type="submit" class="btn btn-orange">Tìm kiếm</button>
</form>

<a href="/AdminCategory/Create" class="btn btn-success mb-3"> Thêm danh mục</a>

<table class="table table-bordered">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Tên danh mục</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Name</td>
                <td class="text-center">
                    <a href="/AdminCategory/Edit/@c.Id" class="btn btn-sm btn-warning me-1">✏️ Sửa</a>
                    <a href="/AdminCategory/Details/@c.Id" class="btn btn-sm btn-info me-1">👁️ Xem</a>
                    <a href="/AdminCategory/Delete/@c.Id" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa danh mục này?');">🗑️ Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- PHÂN TRANG -->
<pagination current-page="@ViewBag.CurrentPage"
            total-pages="@ViewBag.TotalPages"
            base-url="/AdminCategory"
            query-string="keyword=@ViewBag.Keyword">
</pagination>
