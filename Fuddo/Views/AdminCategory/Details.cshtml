@model Fuddo.Models.Category
@{
    ViewData["Title"] = "Chi tiết danh mục";
}
@addTagHelper *,Fuddo

<!-- 🔹 Breadcrumb -->
<nav style="--bs-breadcrumb-divider: '>>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">Quản lí</a></li>
        <li class="breadcrumb-item"><a href="/AdminCategory">Quản lí danh mục</a></li>
        <li class="breadcrumb-item active" aria-current="page">Chi tiết danh mục</li>
    </ol>
</nav>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-orange text-white">
            <h3 class="mb-0"><i class="bi bi-folder2-open me-2"></i>Chi tiết danh mục</h3>
        </div>

        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-3 fw-bold">Tên danh mục</dt>
                <dd class="col-sm-9">@Model.Name</dd>
            </dl>

            <div class="mt-4">
                <a href="/AdminCategory/Edit/@Model.Id" class="btn btn-warning me-2">
                    Chỉnh sửa
                </a>
                <a href="/AdminCategory" class="btn btn-secondary">
                    Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
