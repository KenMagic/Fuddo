@model Fuddo.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}
@addTagHelper *,Fuddo
<!-- 🔹 Breadcrumb -->
<nav style="--bs-breadcrumb-divider: '>>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Admin">Quản lí</a></li>
        <li class="breadcrumb-item"><a href="/AdminProduct">Quản lí sản phẩm</a></li>
        <li class="breadcrumb-item active" aria-current="page">Chi tiết sản phẩm</li>
    </ol>
</nav>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-orange text-white">
            <h3 class="mb-0"><i class="bi bi-box-seam me-2"></i>Chi tiết sản phẩm</h3>
        </div>

        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-3 fw-bold">Tên sản phẩm</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-bold">Giá</dt>
                <dd class="col-sm-9 text-danger">@Model.Price.ToString("N0") ₫</dd>

                <dt class="col-sm-3 fw-bold">Kho còn lại</dt>
                <dd class="col-sm-9">@Model.QuantityInStock</dd>

                <dt class="col-sm-3 fw-bold">Mô tả</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>

            <h5 class="fw-bold mb-3"><i class="bi bi-images me-1"></i>Hình ảnh</h5>
            @if (Model.ProductImages?.Any() == true)
            {
                <div class="row">
                    @foreach (var img in Model.ProductImages)
                    {
                        <div class="col-md-3 col-6 mb-3">
                            <div class="border rounded p-2 shadow-sm bg-light">
                                <img src="@img.ImageUrl" class="img-fluid rounded" />
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning">Sản phẩm này chưa có hình ảnh.</div>
            }

            <div class="mt-4">
                <a href="/AdminProduct/Edit/@Model.Id" class="btn btn-warning me-2">
                    Chỉnh sửa
                </a>
                <a href="/AdminProduct" class="btn btn-secondary">
                    Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
